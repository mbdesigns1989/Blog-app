  <p class="post_title">User's posts</p>
  <%= render "shared/user_info", user: @user %>   
  <% @user_posts.each_with_index do |post,index|%>
    <div>
       <%= render "shared/post_info", post: post, index: index%>
    </div>
    <div class=comments_container>
        <% post.last_comments.each do |comment| %>
          <p class="comment"> <%=User.find(comment.author_id).name%>:  <%=comment.text%> </p>
        <%end%> 
    </div>
  <%end%>
